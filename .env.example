# Discord Bot Configuration
# Get these from Discord Developer Portal (https://discord.com/developers/applications)
DISCORD_TOKEN=your_discord_bot_token_here
CLIENT_ID=your_discord_client_id_here

# MongoDB Database
# MongoDB Atlas connection string
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Server Configuration (Optional)
# Server port, defaults to 3000
# SERVER_PORT=3000
# PORT=3000

# Logging Configuration (Optional)
# Log level: DEBUG, INFO, WARN, ERROR, defaults to INFO
# LOG_LEVEL=INFO

# Show timestamp in logs, defaults to true
# Set to false for cleaner logs
# LOG_TIMESTAMP=false

# Environment (Optional)
# Environment: development or production, defaults to development
# NODE_ENV=production

# Memory Monitoring (Optional)
# Memory check interval in minutes, defaults to 15
# MEMORY_CHECK_MINUTES=15

# Show memory report on startup, defaults to false
# ENABLE_STARTUP_REPORT=false
