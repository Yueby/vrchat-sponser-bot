run = "pnpm install && pnpm run build && pnpm start"

[nix]
channel = "stable-24_05"

[deployment]
build = "NODE_ENV=development pnpm install --frozen-lockfile && pnpm run build"
run = ["sh", "-c", "NODE_ENV=production pnpm start"]

[userenv.shared]
PORT = "3000"
LOG_LEVEL = "INFO"
LOG_TIMESTAMP = "false"

[agent]
expertMode = true

[[ports]]
localPort = 3000
externalPort = 80
